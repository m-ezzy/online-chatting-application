<div class="bar explore">
	<%- include ('../partials/search_elements', {names: 'groups'}) %>

	<div class="hidden list search">
		<div class="hidden section">
			<div class="border-b flex center banner">exact match in your previous groups</div>
			<div class="list"></div>
		</div>
		<div class="hidden section">
			<div class="border-b flex center banner">match in your previous groups</div>
			<div class="list"></div>
		</div>
		<div class="hidden section">
			<div class="border-b flex center banner">create a new group</div>
			<div class="border-b padding flex col-gap">
				<input class="border flex-grow-2 text create_title" type="text" placeholder="type group title here" />
				<button class="flex border square bg-green button create" onclick="groups.handle_click_create()" data-tooltip="create">create</button>
			</div>
		</div>
	</div>

	<div class="list previous"></div>
</div>
<div class='hidden grid bar conversation'>
	<div class='flex header'>
		<div class='min-width-fc padding flex center-y col-gap info' onclick="groups.handle_click_info()">
			<img class="border square image icon" src="" width="20" height="20"></img>
			<div>
				<div class="title"></div>
				<div class="conv_name"></div>
			</div>
		</div>
		<div class="margin-l-a padding flex col-gap">
			<div class='blur button border square call audio' onclick='groups.handle_click_call("audio")' data-tooltip='audio call'>audio call</div>
			<div class='blur button border square call video' onclick='groups.handle_click_call("video")' data-tooltip='video call'>video call</div>
			<input class='blur border text key' type='text' placeholder='type key of this conversation here' oninput='groups.handle_input_key()' />
			<div class='blur button border square key' onclick='groups.handle_click_key()' data-tooltip='encrypt'>encrypt</div>
			<div class='blur button border square info' onclick='groups.handle_click_info()' data-tooltip='info'>info</div>
		</div>
	</div>

	<div class="border-t border-b list conv"></div>

	<%- include ('../partials/sender', {names: 'groups'}) %>
</div>
<div class="hidden border-l bar info">
	<div class="padding flex flex-dir-col row-gap">
		<div class="flex">
			<img class="border image icon icon-groups" src="" />
			<label class="hidden blur border-radius icon_upload" for="group_icon_upload"></label>
			<input class="hidden file" id="group_icon_upload" name="group_icon_upload" type="file" onchange="groups.handle_change_icon()" />
		</div>
		<div>group name :</div>
		<input class="blur border text conv_name" type="text" placeholder="type new group name here" readonly />
		<div>group title :</div>
		<input class="blur border text title" type="text" placeholder="type new group title here" readonly />

		<div class="flex col-gap update_controls">
			<div class='blur border button square edit' onclick='groups.handle_click_edit()' data-tooltip="edit">edit</div>
			<!-- <div class="flex col-gap hidden submit_cancel"> -->
				<div class='hidden border button square bg-green submit' onclick='groups.handle_click_submit()' data-tooltip="submit">submit</div>
				<div class='blur hidden border button square cancel' onclick='groups.handle_click_cancel()' data-tooltip="cancel">cancel</div>
			<!-- </div> -->
		</div>
	</div>
	<div class="padding flex col-gap">
		<input class='blur border flex-grow-2 text add_member' type="text" placeholder='type user name to add here' />
		<button class='flex border button square bg-green add_member' onclick='groups.handle_click_add_member()' data-tooltip="add member">add member</button>
	</div>
	<div class="flex center border-t border-b banner">group members</div>
	<div class='list member'></div>
	<div class="padding">
		<div class='button border square bg-red delete_exit_leave' onclick='groups.handle_click_leave()' data-tooltip="leave">leave</div>
	</div>
</div>
